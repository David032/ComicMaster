<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ComicMaster.Stitcher.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ComicMaster.Stitcher"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="CreateComic"
        ContentTemplate="{DataTemplate local:CreateComic}"
        Route="CreateComic" />

</Shell>
